{
    "zig.zls.enabled": "on",
    "zig.path": "/usr/bin/zig",
    "zig.zls.path": "/usr/bin/zls",
    "editor.formatOnSave": true,
    "[zig]": {
        "editor.defaultFormatter": "ziglang.vscode-zig",
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "files.associations": {
        "*.zig": "zig",
        "*.zon": "zig"
    }
}
